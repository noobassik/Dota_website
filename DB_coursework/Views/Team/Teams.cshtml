@model List<TeamModel>

<h2>Команды</h2>

<p>
    <a asp-action="Create">Добавить новую команду</a>
</p>
<p>
    <a asp-action="PopularRegion">Найти самый популярный регион</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Регион</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Region</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@team.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@team.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>